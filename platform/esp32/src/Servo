#include <Servo.h>
Servo monServo;
void setup() {
monServo.attach(12); // connecte le servo sur le pin 9
}
void tournerServo() {
monServo.write(90); // fait tourner le servo de 90 degrés
delay(1000); // attend 1 seconde avant de continuer
}
void loop() {
tournerServo(); // fait tourner le servo de 90 degrés
delay(1000); // attend 1 seconde avant de répéter
}